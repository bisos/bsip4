function vis_gitBaseConfig {
    G_funcEntry
    function describeF {  cat  << _EOF_
_EOF_
		       }

    function hereDo {
	EH_assert [[ $# -eq 0 ]]
	local here=$(pwd)

	local gitUrl=$( vis_gitUrlAtBase ${here} )
	local gitHostname=$( vis_parseGitUrl_getHostname ${gitUrl} )

	local userName=$( usgBxoSshManage.sh -p usg=$(id -u -n) -i usgAcctCustomGitInfoRead ${gitHostname} userName )
	local userEmail=$( usgBxoSshManage.sh -p usg=$(id -u -n) -i usgAcctCustomGitInfoRead ${gitHostname} userEmail )

	lpDo git config user.name "${userName}"
	lpDo git config user.email "${userEmail}" 	
    }

    function processEach {
	EH_assert [[ $# -eq 1 ]]
	local thisOne="$1"

	inBaseDirDo \
	    ${thisOne} \
	    hereDo
    }

####+BEGIN: bx:bsip:bash/processArgsAndStdin 
     function processArgsAndStdin {
	local effectiveArgs=( "$@" )
	local stdinArgs
	local each
	if [ ! -t 0 ]; then # FD 0 is not opened on a terminal, there is a pipe
	    readarray stdinArgs < /dev/stdin
	    effectiveArgs=( "$@" "${stdinArgs[@]}" )
	fi
	if [ ${#effectiveArgs[@]} -eq 0 ] ; then
	    ANT_raw "No Args And Stdin Is Empty"
	    lpReturn
	fi
	for each in "${effectiveArgs[@]}"; do
	    lpDo processEach "${each%$'\n'}"
	done
    }
    lpDo processArgsAndStdin "$@"
####+END:
    
    lpReturn
}	




function addCommitPush {
   G_funcEntry
    function describeF {  G_funcEntryShow; cat  << _EOF_
Based on addCommitPushClout, runs either git add --update or git add -all.
_EOF_
    }
    EH_assert [[ $# -eq 1 ]]

    local addCommitPushClout="$1"

    local here=$(pwd)
    local gitOutput=""

    if gitStatusReport loc rem ; then
	echo "Nothing to add-commit-push"
	lpReturn
    fi

    echo "Something to add-commit-push -- message=${message}"

    if [ "${addCommitPushClout}" == "modifieds" ] ; then
	lpDo git add --update .
	EH_retOnFail
    elif [ "${addCommitPushClout}" == "all" ] ; then
	if gitBaseIsCollection ; then
	    ANT_raw "In A Collection, only updating modifieds"		
	    lpDo git add --update .
	    EH_retOnFail
	else
	    lpDo git add --all .
	    EH_retOnFail
	fi
    else
	EH_problem "Unknown addCommitPushClout=${addCommitPushClout}"
	EH_retOnFail
    fi
	
    # In -m below, space failed. Changed to _ for that reason
    lpDo git commit -m "${message}"
    EH_retOnFail

    lpDo git push origin master
    EH_retOnFail

    lpReturn
}	


_CommentBegin_
*  [[elisp:(org-cycle)][| ]]  [[elisp:(blee:ppmm:org-mode-toggle)][Nat]] [[elisp:(beginning-of-buffer)][Top]] [[elisp:(delete-other-windows)][(1)]] || IIF       ::  vis_addCommitPush  [[elisp:(org-cycle)][| ]]
_CommentEnd_

function vis_addCommitPush {
    G_funcEntry
    function describeF {  cat  << _EOF_
If there are any args, process those.
If there are no args, process stdin.
_EOF_
		       }

    function hereDo {
	EH_assert [[ $# -eq 1 ]]
	local here=$(pwd)

	lpDo addCommitPush "$@"
    }

    function processEach {
	EH_assert [[ $# -gt 1 ]]
	local each="$1"
	shift 

	inBaseDirDo \
	    ${each} \
	    hereDo "$@"
    }

####+BEGIN: bx:bsip:bash/processStdinWithArgs 
    function processStdinWithArgs {
	local stdinArgs
	local each
	if [ ! -t 0 ]; then # FD 0 is not opened on a terminal, there is a pipe
	    readarray stdinArgs < /dev/stdin
	fi
	if [ ${#stdinArgs[@]} -eq 0 ] ; then
	    ANT_raw "No StdinArgs -- Processing Skipped"
	    lpReturn
	fi
	for each in "${stdinArgs[@]}"; do
	    lpDo processEach "${each%$'\n'}" "$@"
	done
    }
    lpDo processStdinWithArgs "$@"
####+END:
    
    lpReturn
}	


_CommentBegin_
*  [[elisp:(org-cycle)][| ]]  [[elisp:(blee:ppmm:org-mode-toggle)][Nat]] [[elisp:(beginning-of-buffer)][Top]] [[elisp:(delete-other-windows)][(1)]] || IIF       ::  gitBaseIsCollection  [[elisp:(org-cycle)][| ]]
_CommentEnd_


function gitBaseIsCollection {
   G_funcEntry
    function describeF {  G_funcEntryShow; cat  << _EOF_
operates on cwd -- NOTYET: Library Candidate
_EOF_
    }
    EH_assert [[ $# -lt 2 ]]

    local remoteGitName=""
    local remoteGitPath=""
    local fetchUrl=""
    
    if [ $# -eq 1 ] ; then
	remoteGitName="$1"
    else
	fetchUrl=$( git remote show origin | grep 'Fetch URL' | cut -d ':' -f 2-100 | xargs uriParseStdout.py )        
	remoteGitPath=$( printf "${fetchUrl}" | grep -i path | cut -d '=' -f 2 )
	remoteGitName=$( basename "${remoteGitPath}" )
    fi
    
    local retVal=0

    if [ "${remoteGitName}" == "base.git" ] ; then
	retVal=0
    elif [ "${remoteGitName}" == "bxReposBase.git" ] ; then
	retVal=0
    elif [ "${remoteGitName}" == "mohsenBananBase.git" ] ; then
	retVal=0
    else
	retVal=1
    fi

    TM_trace 9 "remoteGitPath=${remoteGitPath} -- remoteGitName=${remoteGitName} -- retVal=${retVal}"
    
    lpReturn ${retVal}
}	



_CommentBegin_
*  [[elisp:(org-cycle)][| ]]  [[elisp:(blee:ppmm:org-mode-toggle)][Nat]] [[elisp:(beginning-of-buffer)][Top]] [[elisp:(delete-other-windows)][(1)]] || IIF       ::  vis_gitBaseIsCollection  [[elisp:(org-cycle)][| ]]
_CommentEnd_

function vis_gitBaseIsCollection {
    G_funcEntry
    function describeF {  cat  << _EOF_
If there are any args, process those.
If there are no args, process stdin.
_EOF_
		       }

    function hereDo {
	EH_assert [[ $# -eq 0 ]]
	local here=$(pwd)

	if gitBaseIsCollection ; then
	    echo "COLLECTION:${here}"
	else
	    echo "REPO-ATOM:${here}"
	fi
    }

    function processEach {
	EH_assert [[ $# -eq 1 ]]
	local thisOne="$1"

	inBaseDirDo \
	    ${thisOne} \
	    hereDo
    }

####+BEGIN: bx:bsip:bash/processArgsAndStdin 
     function processArgsAndStdin {
	local effectiveArgs=( "$@" )
	local stdinArgs
	local each
	if [ ! -t 0 ]; then # FD 0 is not opened on a terminal, there is a pipe
	    readarray stdinArgs < /dev/stdin
	    effectiveArgs=( "$@" "${stdinArgs[@]}" )
	fi
	if [ ${#effectiveArgs[@]} -eq 0 ] ; then
	    ANT_raw "No Args And Stdin Is Empty"
	    lpReturn
	fi
	for each in "${effectiveArgs[@]}"; do
	    lpDo processEach "${each%$'\n'}"
	done
    }
    lpDo processArgsAndStdin "$@"
####+END:

    lpReturn
}	



function gitStatusReport {
   G_funcEntry
    function describeF {  G_funcEntryShow; cat  << _EOF_
Returns 0, if current -- 1 if changed. For Collections, only modifieds are relevant.
NOTYET: Library Candidate
_EOF_
    }
    local remoteReport=0
    local localReport=0
    local locRemReport=0
    local each=""

    for each in "$@" ; do
	if [ "${each}" == "loc" ] ; then
	    localReport=1
	    if (( ${remoteReport} != 0 )) ; then
		locRemReport=1
	    fi
	elif [ "${each}" == "rem" ] ; then
	    remoteReport=1
	    if (( ${localReport} != 0 )) ; then
		locRemReport=1
	    fi
	else
	    EH_problem "Bad usage -- expected loc or rem, got: ${each}"
	    EH_retOnFail
	fi
    done

    local remoteGitPath=""
    local remoteGitName=""
    local remoteHostName=""
    local fetchUrl=""

    fetchUrl=$( git remote show origin | grep 'Fetch URL' | cut -d ':' -f 2-100 | xargs uriParseStdout.py )        
    
    remoteHostName=$( printf "${fetchUrl}" | grep -i hostname | cut -d '=' -f 2 )    
    remoteGitPath=$( printf "${fetchUrl}" | grep -i path | cut -d '=' -f 2 )
    remoteGitName=$( basename "${remoteGitPath}" )

    local locRetVal=0
    local remRetVal=0
    local retVal=0
    
    local gitLocStatusOutput=""
 
    local gitRemStatusOutput=""
    
    function gitDigest {    
	EH_assert [[ $# -eq 3 ]]

	local locRetVal=$1
	local remRetVal=$2
	local collectionOrAtom=$3

	if (( ${locRemReport} != 0 )) ; then
	    if (( "${locRetVal}" == 0 )) ; then
		printf "LOC+REM:${collectionOrAtom}:current:"
	    else
		printf "LOC+REM:${collectionOrAtom}:CHANGED:"
	    fi
	    if (( "${remRetVal}" == 0 )) ; then
		printf ":same:"
	    else
		printf ":FETCH:"
	    fi
	elif (( ${localReport} != 0 )) ; then
	    if (( "${locRetVal}" == 0 )) ; then
		printf "LOC:${collectionOrAtom}:current:"
	    else
		printf "LOC:${collectionOrAtom}:CHANGED:"
	    fi
	elif (( ${remoteReport} != 0 )) ; then
	    if (( "${remRetVal}" == 0 )) ; then
		printf "REM:${collectionOrAtom}:same:"
	    else
		printf "REM:${collectionOrAtom}:FETCH:"
	    fi
	else
	    EH_problem "OOPS"
	    EH_retOnFail
	fi

	printf  " ${here} ::${remoteHostName}:${remoteGitPath}\n"

	lpReturn
    }
    
    if (( ${remoteReport} != 0 )) || (( ${locRemReport} != 0 )) ; then
	gitRemStatusOutput=$( git fetch --dry-run 2>&1 )
	if [ -z "${gitRemStatusOutput}" ] ; then
	    remRetVal=0
	else
	    remRetVal=1
	fi
    fi

    if (( ${localReport} != 0 )) || (( ${locRemReport} != 0 )) ; then    
	gitLocStatusOutput=$( git status  --porcelain )
	# git status does not return a proper exit code

	if [ -z "${gitLocStatusOutput}" ] ; then
	    locRetVal=0
	else
	    locRetVal=1
	fi
    fi

    if gitBaseIsCollection "${remoteGitName}" ; then
	if [ $locRetVal != 0 ] ; then
	    gitLocStatusOutput=$( git status --untracked-files=no --porcelain )
	    if [ -z "${gitLocStatusOutput}" ] ; then
		# In a collection and no modified files.
		locRetVal=0
		lpDo gitDigest ${locRetVal} ${remRetVal} "COLLECTION"
	    else
		lpDo gitDigest ${locRetVal} ${remRetVal} "COLLECTION"		
		lpDo echo "${gitLocStatusOutput}"
	    fi
	else
	    lpDo gitDigest ${locRetVal} ${remRetVal} "COLLECTION"
	fi
    else
	lpDo gitDigest ${locRetVal} ${remRetVal} "REPO-ATOM"
	if [ $locRetVal != 0 ] ; then
	   lpDo echo "${gitLocStatusOutput}"
	fi
    fi
    
    if (( $remRetVal != 0 )) ; then
	lpDo echo "${gitRemStatusOutput}"
    fi
    
    lpReturn ${locRetVal}
}	



