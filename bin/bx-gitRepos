function vis_gitUrlAtBase {
    G_funcEntry
    function describeF {  cat  << _EOF_
Given a fileDirBasePath get its gitUrl.
_EOF_
		       }

    EH_assert [[ $# -eq 1 ]]

    local fileDirBasePath="$1"
    local remoteGitPath=""
    
    opDo pushd ${fileDirBasePath} > /dev/null
    remoteGitPath=$( git remote show origin | grep 'Fetch URL' | cut -d ':' -f 2-100 | xargs uriParseStdout.py | grep -i path | cut -d '=' -f 2 )
    opDo popd > /dev/null
    
    if [ -z "${remoteGitPath}" ] ; then
	EH_problem "Empty remoteGitPath"
    fi
    echo "${remoteGitPath}"
}

_CommentBegin_
*  [[elisp:(org-cycle)][| ]]  [[elisp:(blee:ppmm:org-mode-toggle)][Nat]] [[elisp:(beginning-of-buffer)][Top]] [[elisp:(delete-other-windows)][(1)]] || IIF       ::  vis_parseGitUrl_getHostname,  [[elisp:(org-cycle)][| ]]
_CommentEnd_

function vis_parseGitUrl_getHostname {
    G_funcEntry
    function describeF {  cat  << _EOF_
Given a git url such as git@sshLabel:gitOrg/repo.git return sshLabel.

Explaination (see it in action on regex101):

    ^ matches the start of a string
    (https|git) matches and captures the characters https or git
    (:\/\/|@) matches and captures the characters :// or @
    ([^\/:]+) matches and captures one character or more that is not / nor :
    [\/:] matches one character that is / or :
    ([^\/:]+) matches and captures one character or more that is not / nor :, yet again
    [\/:] matches the character /
    (.+) matches and captures one character or more
    .git matches....git, literally
    $ matches the end of a string

This if far from perfect, as something like https@github.com:some-user/my-repo.git would
match, but I think it's fine enough for extraction.
_EOF_
		       }

    EH_assert [[ $# -eq 1 ]]

    local remoteUrl="$1"
    local re="^(https|git)(:\/\/|@)([^\/:]+)[\/:]([^\/:]+)\/(.+).git$"

    local protocol=""
    local separator=""
    local hostname=""
    local user=""
    local repo=""
    
    if [[ $remoteUrl =~ $re ]] ; then    
	protocol=${BASH_REMATCH[1]}
	separator=${BASH_REMATCH[2]}
	hostname=${BASH_REMATCH[3]}
	user=${BASH_REMATCH[4]}
	repo=${BASH_REMATCH[5]}
    else
	EH_problem "Badly formed gitUrl"
    fi

    if [ -z "${hostname}" ] ; then
	EH_problem "Empty hostname"
    fi
    echo "${hostname}"
}


