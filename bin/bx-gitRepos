function vis_bxReposStatusFtoWalk {
   G_funcEntry
    function describeF {  G_funcEntryShow; cat  << _EOF_
_EOF_
    }
    EH_assert [[ $# -eq 0 ]]

    pushd /bisos/git/auth/bxRepos > /dev/null \
	&& \
	stdbuf -i0 -o0 -e0  ftoProc.sh -v -n showRun -i treeRecurse gitStatusReport 2> /dev/null | \
	    egrep '^GIT-DIGEST' \
	&& \
	popd > /dev/null

    lpReturn
}	


function vis_cachedLsFileName {
   G_funcEntry
    function describeF {  G_funcEntryShow; cat  << _EOF_
_EOF_
    }
    EH_assert [[ $# -eq 0 ]]

    if [ ! -d "/bisos/var/core/cached" ] ; then
	lpDo mkdir -p /bisos/var/core/cached
    fi

    if [ "${vcMode}" == "auth" ] ; then
	echo "/bisos/var/core/cached/bxReposList.auth"
    elif [ "${vcMode}" == "anon" ] ; then
	echo "/bisos/var/core/cached/bxReposList.anon"
    else
	EH_problem "vcMode=${vcMode} is neither auth nor anon"
	EH_retOnFail
    fi

    lpReturn
}	


function vis_cachedLsRefresh {
   G_funcEntry
    function describeF {  G_funcEntryShow; cat  << _EOF_
_EOF_
    }
    EH_assert [[ $# -eq 0 ]]

    local bxReposListFileName=$( vis_cachedLsFileName )
    EH_assert [[ "${bxReposListFileName}X" != "X" ]]

    ANT_cooked "Creating The Cache File at ${bxReposListFileName}:"
    lpDo stdbuf -i0 -o0 -e0 ${G_myName} -h -v -n showRun -p baseDir="${baseDir}" -p vcMode=${vcMode} -i bxReposList | tee "${bxReposListFileName}"

    lpReturn
}	

function vis_cachedLs {
   G_funcEntry
    function describeF {  G_funcEntryShow; cat  << _EOF_
_EOF_
    }
    EH_assert [[ $# -eq 0 ]]

    local bxReposListFileName=$( vis_cachedLsFileName )
    EH_assert [[ "${bxReposListFileName}X" != "X" ]]

    if [ -f "${bxReposListFileName}" ] ; then
	lpDo cat "${bxReposListFileName}"
    else
	lpDo vis_cachedLsRefresh
    fi

    lpReturn
}	


