_CommentEnd_


function vis_gitRemPullAndCloneWhenMissing {
    G_funcEntry
    function describeF {  cat  << _EOF_
Apply args to each line of stdin.
_EOF_
		       }

    function hereMissingDo {
	local here=$(pwd)
	local repoName=$@

	local oneExistingRepo=$(lpDo eval ls \| head -1)
	EH_assert [ -n "${oneExistingRepo}" ]

	EH_assert [ -d "${oneExistingRepo}" ] 
	lpDo pushd "${oneExistingRepo}" > /dev/null
	fetchUrl=$( git remote show origin | grep 'Fetch URL' | cut -d ':' -f 2-100 | xargs uriParseStdout.py )
	remoteHostName=$( printf "${fetchUrl}" | grep -i hostname | cut -d '=' -f 2 )    
	remoteGitPath=$( printf "${fetchUrl}" | grep -i path | cut -d '=' -f 2 )
	remoteGitName=$( FN_dirsPart "${remoteGitPath}" )
	lpDo popd > /dev/null
	
	ANT_raw "${here}/${repoName} is missing -- cloning from: ${remoteGitName}/${repoName}.git"
	ANT_raw "Running: git clone ${remoteGitName}/$@.git"

	lpDo git clone ${remoteGitName}/$@.git
    }

    function hereInPlaceReport {
	local here=$(pwd)

	# fetchUrl=$( git remote show origin | grep 'Fetch URL' | cut -d ':' -f 2-100 | xargs uriParseStdout.py )
	# remoteHostName=$( printf "${fetchUrl}" | grep -i hostname | cut -d '=' -f 2 )    
	# remoteGitPath=$( printf "${fetchUrl}" | grep -i path | cut -d '=' -f 2 )
	# remoteGitName=$( FN_dirsPart "${remoteGitPath}" )

	#ANT_raw "${here} is in place -- Pulling if needed"
	
	lpDo gitRemPull
    }

    function processEach {
	EH_assert [[ $# -eq 1 ]]
	local each="$1"
	local repoName=$(basename "${each}")
	shift

	if [ -d "${each}" ] ; then
	    inBaseDirDo \
		${each} \
		hereInPlaceReport
	else
	    each=$(FN_dirsPart "${each}")
	
	    inBaseDirDo \
		${each} \
		hereMissingDo "${repoName}"
	fi
    }

####+BEGIN: bx:bsip:bash/processStdinWithArgs 
    function processStdinWithArgs {
	local stdinArgs
	local each
	if [ ! -t 0 ]; then # FD 0 is not opened on a terminal, there is a pipe
	    readarray stdinArgs < /dev/stdin
	fi
	if [ ${#stdinArgs[@]} -eq 0 ] ; then
	    ANT_raw "No StdinArgs -- Processing Skipped"
	    lpReturn
	fi
	for each in "${stdinArgs[@]}"; do
	    lpDo processEach "${each%$'\n'}" "$@"
	done
    }
    lpDo processStdinWithArgs "$@"
####+END:
    
    lpReturn
}	


function vis_cloneWhenMissing {
    G_funcEntry
    function describeF {  cat  << _EOF_
Apply args to each line of stdin.
_EOF_
		       }

    function hereMissingDo {
	local here=$(pwd)
	local repoName=$@

	local oneExistingRepo=$(lpDo eval ls \| head -1)
	EH_assert [ -n "${oneExistingRepo}" ]

	EH_assert [ -d "${oneExistingRepo}" ] 
	lpDo pushd "${oneExistingRepo}" > /dev/null
	fetchUrl=$( git remote show origin | grep 'Fetch URL' | cut -d ':' -f 2-100 | xargs uriParseStdout.py )
	remoteHostName=$( printf "${fetchUrl}" | grep -i hostname | cut -d '=' -f 2 )    
	remoteGitPath=$( printf "${fetchUrl}" | grep -i path | cut -d '=' -f 2 )
	remoteGitName=$( FN_dirsPart "${remoteGitPath}" )
	lpDo popd > /dev/null
	
	ANT_raw "${here}/${repoName} is missing -- cloning from: ${remoteGitName}/${repoName}.git"
	ANT_raw "Running: git clone ${remoteGitName}/$@.git"

	lpDo git clone ${remoteGitName}/$@.git
    }

    function hereInPlaceReport {
	local here=$(pwd)

	fetchUrl=$( git remote show origin | grep 'Fetch URL' | cut -d ':' -f 2-100 | xargs uriParseStdout.py )
	remoteHostName=$( printf "${fetchUrl}" | grep -i hostname | cut -d '=' -f 2 )    
	remoteGitPath=$( printf "${fetchUrl}" | grep -i path | cut -d '=' -f 2 )
	remoteGitName=$( FN_dirsPart "${remoteGitPath}" )

	ANT_raw "${here} is in place -- no need to clone -- remoteGit=${remoteGitPath}"
    }

    function processEach {
	EH_assert [[ $# -eq 1 ]]
	local each="$1"
	local repoName=$(basename "${each}")
	shift

	if [ -d "${each}" ] ; then
	    inBaseDirDo \
		${each} \
		hereInPlaceReport
	else
	    each=$(FN_dirsPart "${each}")
	
	    inBaseDirDo \
		${each} \
		hereMissingDo "${repoName}"
	fi
    }

