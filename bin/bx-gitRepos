function vis_examples {
    typeset extraInfo="-h -v -n showRun"
    #typeset extraInfo=""
    typeset runInfo="-p ri=lsipusr:passive"

    typeset examplesInfo="${extraInfo} ${runInfo}"

    local oneRepoBaseDir="/bisos/git/auth/bxRepos/bisos-pip/bx-bases"

    visLibExamplesOutput ${G_myName} 
  cat  << _EOF_
$( examplesSeperatorTopLabel "${G_myName}" )
$( examplesSeperatorChapter "Manage Git Repo Base Directories" )
$( examplesSeperatorSection "Top Repos BaseDir" )
${G_myName} -i bxReposBaseDir  # $( ${G_myName} -i bxReposBaseDir )
${G_myName} -p vcMode=anon -i bxReposBaseDir # $( ${G_myName} -p vcMode=anon -i bxReposBaseDir )
ls -l $( ${G_myName} -i bxReposBaseDir ) $( ${G_myName} -p vcMode=anon -i bxReposBaseDir )
$( examplesSeperatorSection "List BxRepo Base Directories (FTO WalkDirs)" )
cd /bisos/git/auth/bxRepos && ftoProc.sh -v -n showRun -i treeRecurse gitReposList  # With all debugging info
cd /bisos/git/auth/bxRepos && ftoProc.sh -v -n showRun -i treeRecurse gitReposList 2> /dev/null | egrep '^GitRepo' | cut -d ':' -f 2 
stdbuf -i0 -o0 -e0 ${G_myName} ${extraInfo} -i bxReposList   # default vcMode=auth
stdbuf -i0 -o0 -e0 ${G_myName} ${extraInfo} -p vcMode=anon -i bxReposList   # default vcMode=auth
$( examplesSeperatorSection "List Cached BxRepos Base Directories" )
${G_myName} -i cachedLsFileName  # $( ${G_myName} -i cachedLsFileName )
${G_myName} -p vcMode=anon -i cachedLsFileName  # $( ${G_myName} -p vcMode=anon -i cachedLsFileName )
ls -l $( ${G_myName} -i cachedLsFileName ) $( ${G_myName} -p vcMode=anon -i cachedLsFileName )
${G_myName} ${extraInfo} -i cachedLsRefresh
${G_myName} ${extraInfo} -p vcMode=anon -i cachedLsRefresh
${G_myName} ${extraInfo} -p baseDir="/bisos/git/auth/bxRepos/bisos-pip" -p vcMode=auth -i cachedLsRefresh
${G_myName} ${extraInfo} -i cachedLs
${G_myName} ${extraInfo} -p vcMode=anon -i cachedLs
$( examplesSeperatorSection "gitBaseIsCollection Git Repo Base Directories" )
${G_myName} -i gitBaseIsCollection ${oneRepoBaseDir}
${G_myName} -i cachedLs | ${G_myName} -i gitBaseIsCollection
${G_myName} -p vcMode=anon -i cachedLs | ${G_myName} -i gitBaseIsCollection
$( examplesSeperatorSection "List BxRepo Base grep GIT-DIGEST" )
cd /bisos/git/auth/bxRepos && ftoProc.sh -v -n showRun -i treeRecurse gitStatusReport 2> /dev/null | grep GIT-DIGEST
echo ${oneRepoBaseDir} | ${G_myName} ${extraInfo} -i status loc
${G_myName} -i cachedLs | ${G_myName} -i status loc
${G_myName} -i cachedLs | ${G_myName} -i status rem
${G_myName} -i cachedLs | ${G_myName} -i status loc rem
${G_myName} -i cachedLs | ${G_myName} -i status | grep CHANGED | grep ATOM
${G_myName} -p vcMode=anon -i cachedLs | ${G_myName} -i status loc
${G_myName} -p vcMode=anon -i cachedLs | ${G_myName} -i status loc rem
${G_myName} -p vcMode=anon -i cachedLs | ${G_myName} -i status rem
${G_myName} -p vcMode=anon -i cachedLs | ${G_myName} -i status | grep CHANGED
$( examplesSeperatorSection "Base Config -- userName, userEmail based on sshLabel" )
${G_myName} ${extraInfo} -i gitBaseConfig ${oneRepoBaseDir}
${G_myName} -i cachedLs | ${G_myName} ${extraInfo} -i gitBaseConfig
$( examplesSeperatorSection "Pull Remote" )
${G_myName} ${extraInfo} -i gitRemPull ${oneRepoBaseDir}
${G_myName} -i cachedLs | ${G_myName} -i gitRemPull
$( examplesSeperatorSection "Clone When Missing -- And Pull If Needed" )
echo ${oneRepoBaseDir}  | ${G_myName} ${extraInfo} -i cloneWhenMissing
${G_myName} -i cachedLs | ${G_myName} -i cloneWhenMissing
echo ${oneRepoBaseDir}  | ${G_myName} ${extraInfo} -i gitRemPullAndCloneWhenMissing
${G_myName} -i cachedLs | ${G_myName} -i gitRemPullAndCloneWhenMissing
$( examplesSeperatorSection "Add, Commit and Push" )
echo ${oneRepoBaseDir}  | ${G_myName} ${extraInfo} -i addCommitPush modifieds 
echo  ${oneRepoBaseDir} | ${G_myName} ${extraInfo} -i addCommitPush all
${G_myName} -i cachedLs | ${G_myName} -i addCommitPush modifieds
${G_myName} -i cachedLs | ${G_myName} -i addCommitPush all
$( examplesSeperatorSection "Update Git Repo Base Directories" )
${G_myName} ${extraInfo} -i baseUpdateDotIgnore ${oneRepoBaseDir}
${G_myName} ${extraInfo} -i baseUpdateDotIgnore .
${G_myName} -i cachedLs | ${G_myName} ${extraInfo} -i baseUpdateDotIgnore
startAnyFto.sh -h -v -n showRun -i startFtoUpdate auxNode
$( examplesSeperatorSection "Verify Git Repo Base Directories" )
${G_myName} ${extraInfo} -i baseVerifyDotIgnore ${oneRepoBaseDir}
${G_myName} ${extraInfo} -i baseVerifyDotIgnore .
${G_myName} -i cachedLs | ${G_myName} -i baseVerifyDotIgnore
${G_myName} -i cachedLs | ${G_myName} -i baseVerifyDotIgnore | grep Missing
$( examplesSeperatorSection "gitUrl" )
${G_myName} ${extraInfo} -i gitUrlAtBase ${oneRepoBaseDir}
${G_myName} ${extraInfo} -i parseGitUrl_getHostname $(${G_myName} -i gitUrlAtBase ${oneRepoBaseDir})
_EOF_
}

noArgsHook() {
  vis_examples
}



