_CommentEnd_


function gitRemPull {
   G_funcEntry
    function describeF {  G_funcEntryShow; cat  << _EOF_
_EOF_
    }
    EH_assert [[ $# -eq 0 ]]

    local here=$(pwd)

    lpDo echo "git pull in ${here}"

    lpDo git pull origin master
}	



