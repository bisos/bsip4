function vis_leafTherePredicate {
    G_funcEntry
    function describeF {  cat  << _EOF_
_EOF_
    }

    EH_assert [[ $# -eq 1 ]]

    typeset here=$1

    opDoExit cd ${here}

    if [[ ! -f _tree_ ]] ; then 
	EH_problem "Missing _tree_"
	lpReturn 101
    fi

    typeset nodeOrLeaf=$( cat _tree_ )

    if [ "${nodeOrLeaf}" == "leaf" ] ; then
	lpReturn 0
    elif [ "${nodeOrLeaf}" == "node" ] ; then
	lpReturn 1
    else
	lpReturn 101
    fi
}


